<% if user_signed_in? %>
  <%= link_to "My Items", my_items_items_path, class: 'btn custom-btn me-2 mt-3' %>
  <%= link_to "Reserved Items", reserved_items_items_path, class: 'btn custom-btn me-2 mt-3' %>
  <%= link_to 'Edit profile', edit_user_registration_path, class: 'btn custom-btn me-2 mt-3' %>
  <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'btn custom-btn me-2 mt-3' %>
<% else %>
  <%= link_to 'Login', new_user_session_path, class: 'btn custom-btn me-2 mt-3' %>
  <%= link_to 'Sign Up', new_user_registration_path, class: 'btn custom-btn me-2 mt-3' %>
