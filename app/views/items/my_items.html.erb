<div class="container py-5">
  <div class="row mb-2">
    <div class="col">
      <%= link_to 'Find an item', items_path, class: 'btn btn-primary' %>
    </div>
    <div class="col text-end">
      <%= link_to 'Share an Item', new_item_path, class: 'btn btn-success' %>
    </div>
  </div>

  <h1 class="mt-4 mb-4">My Items</h1>

  <% if @items.any? %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @items.each do |item| %>
        <div class="col mb-4">
          <div class="card shadow-sm h-100">
            <% if item.image.attached? %>
              <%= image_tag item.image, class: "bd-placeholder-img card-img-top img-fluid img-height", style: "max-height: 225px; object-fit: contain;" %>
            <% else %>
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                <rect width="100%" height="100%" fill="#55595c"/>
                <text x="50%" y="50%" fill="#eceeef" dy=".3em" text-anchor="middle">No image added</text>
              </svg>
            <% end %>
            <div class="card-body">
              <h3 class="card-title"><%= item.title %></h3>
              <p class="card-text"><%= item.body %></p>
              <div class="d-flex justify-content-end">
                <div class="btn-group">
                  <%= link_to "View", item_path(item), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to "Delete", item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You have no items.</p>
  <% end %>
</div>
