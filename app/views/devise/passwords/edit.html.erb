<div class="container d-flex justify-content-center align-items-start min-vh-100">
  <div class="card shadow" style="width: 400px; margin-top: 50px;">
    <div class="card-body">
      <h2 class="card-title text-center">Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="mb-3">
          <%= f.label :password, "New password", class: "form-label" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Change my password", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
